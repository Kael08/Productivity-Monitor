<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<VBox fx:id="rootVBox"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="productivityMonitor.controllers.AuthController"
      prefHeight="300.0" prefWidth="300.0" alignment="CENTER" spacing="10">
    <children>
        <ImageView fx:id="iconImageView" fitHeight="90" fitWidth="90">
            <VBox.margin>
                <Insets top="10" bottom="30"/>
            </VBox.margin>
        </ImageView>
        <TextField fx:id="loginTextField" promptText="login..." >
            <VBox.margin>
                <Insets left="10" right="10"/>
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="passwordTextField" promptText="password...">
            <VBox.margin>
                <Insets left="10" right="10"/>
            </VBox.margin>
        </PasswordField>
        <Button fx:id="authButton" onAction="#handleAuthButton" text="Sign In">

        </Button>
        <Button fx:id="regButton" onAction="#handleRegButton" text="No Account?">
            <VBox.margin>
                <Insets bottom="10"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>
