<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="productivityMonitor.controllers.TimerController" stylesheets="@../styles/timer.css"
      spacing="10" prefWidth="300" prefHeight="300" minWidth="200" minHeight="200">
   <TextArea fx:id="consoleTextArea" VBox.vgrow="ALWAYS" editable="false" />
   <HBox minHeight="32.0" minWidth="200" alignment="CENTER" spacing="10">
      <TextField fx:id="hourTextField" minWidth="40" maxWidth="40" promptText="H" />
      <TextField fx:id="minuteTextField" minWidth="40" maxWidth="40" promptText="M"/>
      <Button fx:id="setButton" mnemonicParsing="false" text="Set" onAction="#handleSetTime" />
      <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" onAction="#handleClearTime" />
   </HBox>
</VBox>

